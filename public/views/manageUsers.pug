html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Admin Portal
    link(rel="stylesheet" href="/res/stylesheets/bootstrap.css")
    link(rel="stylesheet" href="/res/stylesheets/manageUsers.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.css" integrity="sha512-hvNR0F/e2J7zPPfLC9auFe3/SE0yG4aJCOd/qxew74NN7eyiSKjr7xJJMu1Jy2wf7FXITpWS1E/RY8yzuXN7VA==" crossorigin="anonymous" referrerpolicy="no-referrer")
  body
    .container-sm.min-vw-100.m-0
      .row.content
        .lcol.col-sm-6.col-12.d-flex.flex-column.justify-content-center.align-items-center
          .card.border-0.w-100.createCard.flex-item
            .card-body
              h1.card-title.text-center Create User
              p#helpTip.text-danger.fw-bold
              form#userCreationForm
                .form-floating.m-lg-3.m-1.row
                  input(type="text" class="form-control" id="userID" placeholder="User ID" name="userID")
                  label(for="userID") User ID
                .form-floating.m-lg-3.m-1.row
                  input(type="password" class="form-control" id="password" placeholder="Password" name="password")
                  label(for="password") Password
                  input(type="hidden" name="action" value="add")
                .row
                  input(type="button" onclick="createUser()" class="form-control btn btn-primary w-50 m-auto mb-0" value="Create") 

        .rcol.col-sm-6.col-12.d-flex.flex-column.justify-content-center.align-items-center
          .userTable.d-flex.flex-column
            .card.userList.border-0.w-100.flex-item
              .card-body
                h1.card-title.text-center User List
                table#userTable.table.table-striped.table-hover.table-dark
                  thead
                    tr
                      th(scope='col') User ID
                      th(scope='col') Password
                      th(scope='col') Photo
                      th(scope='col') Delete
                  tbody
                    each user in users
                      tr(id=user._id)
                        td #{user.userID}
                        td #{user.password}
                        td #{user.photo? user.photo: "No Photo"}
                        td
                          button(type="button" onclick=`deleteUser('${user._id}')` class="btn btn-danger") Delete
  script(src="/res/scripts/bootstrap.js")
  script(src="/res/scripts/manageUsers.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js" integrity="sha512-9KkIqdfN7ipEW6B6k+Aq20PV31bjODg4AA52W+tYtAE0jE0kMx49bjJ3FgvS56wzmyfMUHbQ4Km2b7l9+Y/+Eg==" crossorigin="anonymous" referrerpolicy="no-referrer")
